{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": ".",
        "sourceMap": true,
        "esModuleInterop": true,
        "declaration": true,
        "declarationDir": "types",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "esnext",
        "lib": ["es2017", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "paths": {
            "@zk-groups/*": ["libs/*/src"]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
