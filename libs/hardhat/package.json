{
    "name": "@zk-groups/hardhat",
    "version": "0.1.7",
    "description": "A Hardhat plugin which provides tasks to deploy ZKGroups contracts.",
    "license": "MIT",
    "main": "dist/index.node.js",
    "exports": {
        "import": "./dist/index.mjs",
        "require": "./dist/index.node.js"
    },
    "types": "dist/types/index.d.ts",
    "files": [
        "dist/",
        "src/",
        "LICENSE",
        "README.md"
    ],
    "repository": "https://github.com/privacy-scaling-explorations/zk-groups",
    "homepage": "https://github.com/privacy-scaling-explorations/zk-groups/tree/main/libs/hardhat",
    "bugs": {
        "url": "https://github.com/privacy-scaling-explorations/zk-groups.git/issues"
    },
    "scripts": {
        "build:watch": "rollup -c rollup.config.ts -w --configPlugin typescript",
        "build": "rimraf dist && rollup -c rollup.config.ts --configPlugin typescript",
        "prepublishOnly": "yarn build"
    },
    "publishConfig": {
        "access": "public"
    },
    "devDependencies": {
        "rimraf": "^4.1.2",
        "rollup": "^3.17.2",
        "rollup-plugin-cleanup": "^3.2.1",
        "rollup-plugin-typescript2": "^0.34.1",
        "typescript": "^4.9.5"
    },
    "peerDependencies": {
        "@nomiclabs/hardhat-ethers": "^2.2.2",
        "@semaphore-protocol/contracts": "3.1.0",
        "@zk-groups/contracts": "0.1.7",
        "ethers": "^5.7.2",
        "hardhat": "^2.9.7"
    },
    "dependencies": {
        "hardhat-dependency-compiler": "^1.1.3"
    }
}
