{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "sourceMap": true,
        "esModuleInterop": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "esnext",
        "lib": ["es2017", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@zk-groups/api/*": ["apps/api/src/*"],
            "@zk-groups/client/*": ["apps/client/src/*"],
            "@zk-groups/dashboard/*": ["apps/dashboard/src/*"],
            "@zk-groups/passport-reddit": ["libs/passport-reddit/src/index.ts"],
            "@zk-groups/utils": ["libs/utils/src/index.ts"]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
