{
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "apps/contracts",
    "projectType": "application",
    "targets": {
        "start": {
            "executor": "nx:run-commands",
            "options": {
                "commands": [
                  "hardhat compile",
                  "hardhat deploy",
                  "hardhat node"
                ],
                "parallel": false,
                "cwd": "apps/contracts"
            }
        },
        "node": {
            "executor": "nx:run-commands",
            "options": {
                "command": "hardhat node",
                "cwd": "apps/contracts"
            }
        },
        "build": {
            "executor": "nx:run-commands",
            "options": {
                "command": "hardhat compile",
                "cwd": "apps/contracts"
            }
        },
        "deploy": {
            "executor": "nx:run-commands",
            "options": {
                "command": "hardhat deploy",
                "cwd": "apps/contracts"
            }
        },
        "deploy-arbitrum": {
            "executor": "nx:run-commands",
            "options": {
                "command": "hardhat deploy --network arbitrum",
                "cwd": "apps/contracts"
            }
        },
        "deploy-goerli": {
            "executor": "nx:run-commands",
            "options": {
                "command": "hardhat deploy --network goerli",
                "cwd": "apps/contracts"
            }
        },
        "test": {
            "executor": "nx:run-commands",
            "options": {
                "commands": [
                    {
                        "command": "hardhat test",
                        "forwardAllArgs": false
                    }
                ],
                "cwd": "apps/contracts"
            }
        },
        "coverage": {
            "executor": "nx:run-commands",
            "options": {
                "command": "hardhat coverage",
                "cwd": "apps/contracts"
            }
        },
        "lint": {
            "executor": "nx:run-commands",
            "options": {
                "command": "solhint './contracts/**/*.sol'",
                "cwd": "apps/contracts"
            }
        }
    },
    "tags": []
}
