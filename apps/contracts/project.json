{
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "apps/contracts",
    "projectType": "application",
    "targets": {
        "serve": {
            "executor": "nx:run-commands",
            "options": {
                "commands": [
                    "hardhat node",
                    "sleep 3 && hardhat compile && hardhat deploy-zkgroups --network localhost"
                ],
                "parallel": true,
                "cwd": "apps/contracts"
            }
        },
        "node": {
            "executor": "nx:run-commands",
            "options": {
                "command": "hardhat node",
                "cwd": "apps/contracts"
            }
        },
        "build": {
            "executor": "nx:run-commands",
            "options": {
                "commands": [
                    "hardhat compile",
                    "shx mkdir -p ../../dist",
                    "shx rm -fr ../../dist/contracts",
                    "shx cp -r contracts ../../dist/contracts"
                ],
                "parallel": false,
                "cwd": "apps/contracts"
            }
        },
        "deploy": {
            "executor": "nx:run-commands",
            "options": {
                "command": "hardhat deploy-zkgroups",
                "cwd": "apps/contracts"
            }
        },
        "test": {
            "executor": "nx:run-commands",
            "options": {
                "commands": [
                    {
                        "command": "hardhat coverage",
                        "forwardAllArgs": false
                    }
                ],
                "cwd": "apps/contracts"
            }
        },
        "coverage": {
            "executor": "nx:run-commands",
            "options": {
                "command": "hardhat coverage",
                "cwd": "apps/contracts"
            }
        },
        "lint": {
            "executor": "nx:run-commands",
            "options": {
                "command": "solhint './contracts/**/*.sol'",
                "cwd": "apps/contracts"
            }
        }
    },
    "tags": []
}
